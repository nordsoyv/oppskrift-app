extends layout

block body
  div(class="container" ,ng-app="OppskriftApp", ng-controller="MainCtrl")
    .row
        .span6
            h2 Oppskrifts database
            ul
              li
                a(href='/') Hovedsiden
              li
                a(href='/addOppskrift') Legg til en ny oppskrift
        div(ng-controller="LoginCtrl", class="login-wrapper")
            div(ng-switch on="loginInfo.loggedIn")
                div(ng-switch-when="false", class="span5 offset1")
                    label(for='loginName') Brukernavn:
                    input(ng-model="form.email" , name="loginName")
                    label(for='password') Passord:
                    input(type='password', ng-model="form.password" , name="password")
                    button.btn(ng-click='login()') Login
                    a(href='#', ng-click='createUser()') Ny bruker?
                div(ng-switch-when="true", class="span3 offset3")
                    label Logget inn som : {{loginInfo.user}}
                    button.btn(ng-click="logout()") Logout

    div(ng-view)
    
  script(src='js/lib/angular/angular.js')
  script(src='js/lib/angular/angular-resource.js')
  script(src='js/lib/angular-ui/ui-bootstrap-0.3.0.js')
  script(src='js/lib/angular-ui/ui-bootstrap-tpls-0.3.0.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
